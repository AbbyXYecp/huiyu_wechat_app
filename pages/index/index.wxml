<!--pages/index/index.wxml-->
<image class='index-img' src='http://olmrxx9ks.bkt.clouddn.com/2017-09-24-142761.jpg'></image>
<view class='shop-name'>
  <image class='logo' src='http://olmrxx9ks.bkt.clouddn.com/2017-09-28-035300.jpg'></image>
  <view class='logo-title'>汇宇通通讯<button open-type="share" class="fa fa-share-square-o" aria-hidden="true"></button></view>
</view>
<!-- 营业时间 -->
<view class='open-time'>
  <i class="fa fa-clock-o" aria-hidden="true"></i> 10:00至17:00 
  <!-- 打电话 -->
  <i class="fa fa-phone" bindtap="make_call" aria-hidden="true"></i>
</view>
<!-- 地址导航 -->
<view bindtap='show_map' class='address'><i class="fa fa-map-marker" aria-hidden="true"></i> 新城区西新街海星智能广场...  <i class="fa fa-chevron-right" aria-hidden="true"></i><span style="border: {{distance == underfind ? '' : '1rpx solid #07B642;'}}" class="label label-success">{{distance}}</span></view>
<view class='line-ui'></view>
<!-- 门店视频 -->
<block wx:if="{{videoUrl}}">
  <view class='vidio-title'>
    门店视频
    <i class="fa fa-video-camera" aria-hidden="true"></i>
  </view>
  <video class='shop-video' controls style="width: 100%; " src='{{videoUrl}}'></video>
</block>
<view class='line-ui'></view>
<!-- 门店图片 -->
<block wx:if="{{imgUrl}}">
  <view class='vidio-title img-title'>
    门店图片
    <i class="fa fa-picture-o" aria-hidden="true"></i>
  </view>
  <view class='shop-img-group'>
    <block wx:for="{{imgUrl}}">
      <image bindtap='imgpreview' class='shop-img' src='{{item}}'></image>
    </block>
  </view>
</block>
